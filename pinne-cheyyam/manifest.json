{
  "manifest_version": 2,
  "name": "Useless Projects Extension",
  "version": "1.0",
  "description": "Annoy users with quizzes, puzzles, and mini-games when they are productive.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type":"module"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  },
  "options_page": "options/options.html"
}